.episode-container{
    height: 60rpx;
    display: inline-flex;
    flex-direction: row;
    overflow: hidden;
}
.episode_index_left{
    display: inline-flex;
    flex-direction: row;
    align-items: baseline;
}
.episode_index_left .episode_text{
    font-size: 32rpx;
}
.episode_index_left .episode_index{
    font-size:60rpx;
    line-height:60rpx; 
    font-weight:800;
    margin-right:14rpx;
}
.episode_index_left .line{
    /* width: 2rpx;
    height: 60rpx;
