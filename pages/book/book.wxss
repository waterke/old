/* pages/book/book.wxss */
.book-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-around; */
}
.headers {
    width: 100%;
    height:110rpx;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    z-index: 1000;
}
.header-box{
    width: 690rpx;
    height: 66rpx;
    background: #f7f7f7;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-radius: 30px;
    color:#999999;
    font-size: 24rpx;
}
.headers .heaader-img{
    width: 28rpx;
    height: 28rpx;
    margin-right: 6rpx;
}
.book-content{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f9f9f9;
    position: relative;
    top: 110rpx;
    /* justify-content: space-between;*/
}
.book-content .book-img{
    width: 107rpx;
    height: 34rpx;
    margin-top: 30rpx;
}
.bookList{
    display: flex;
    flex-direction: row;
    /* padding解决width过宽放置书籍过多问题 */
    padding: 0rpx 90rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}
.bookHot{
    margin-bottom: 20rpx;
    /* flex: 50% 50%; */
}