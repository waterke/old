/* pages/book-detail/book-detail.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f5f5f5;
}
.header{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #ffffff;
    padding: 30rpx 0rpx;
}
.header .bookImg{
    width: 204rpx;
    height: 306rpx;
    box-shadow: 2px 2px 10px #e3e3e3;
}
.header .title{
    font-size:34rpx;
    line-height: 60rpx;
    margin-top: 10rpx;
}
.header .author{
    font-size:24rpx;
    color:#999999;
}
.sub-container {
    width: 690rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    padding: 30rpx;
}

.headline {
    font-size:30rpx;
    color: #2f2f2f;
    font-weight: 600;
    margin-bottom: 20rpx;
}
.comment-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.comment-container v-tag {
    margin-right: 15rpx;
    margin-bottom:10rpx;
}
